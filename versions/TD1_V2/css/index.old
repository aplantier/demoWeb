/***************  TP2  *************/
/*    Display for the Question 1   */

p {
	color: blue;
	background-color: #fcf9d9;
	margin-bottom: 2px;
	text-indent: 1.5em;
}
p + p {
	text-indent: 1.5em;
	margin-top: 0;
}


h3{
	
	border-radius: 25px; 
	border: 3px solid #46E0FF;
	display: inline-block;
	padding: 5px;

}
h3:hover{
color: hotpink;
}
section h4{
	display: inline-block;
	border-bottom: 3px solid #46E0FF;
	border-right: 3px solid #46E0FF;
	padding: 5px;
	
}
section img{
	max-width: 75%;
	height: auto;
	display: block;
	margin-left: auto;
	margin-right: auto;
	
}



/************************************ 
	 Header

*/
header{	
	background: linear-gradient(to right, #46E0FF,  white 85% );
	height:auto;
	width: 100%;
	display: flex;
	flex-direction: row;	
}
header #titre{

	border-color: coral;
	font-family: cursive;
	text-align: center;
	width: 100%;
	height: 70%;
}
nav{

	font-family: fantasy;
	height: 30%;
	text-align: left;
}
nav li {
	display: inline-block;				/* display blocks inline */
	font-style: bold;					/* font configuration */
	font-size: 25px;		
	background-color: #F9E79F;			/* color of nav bar background */
	border-radius: 25px;           		/* round corner for the cels of the nav bar */
	padding: 10px;	
	margin: 5px;						/* espacement entre les celules*/
}

nav a:link {
	text-decoration: none;
	color: black;
}
nav li:hover {	
	background-color: yellow;
	color: yellow;
}
nav li:active{
	color: yellow;
}

main{

	height: 70%;
}


