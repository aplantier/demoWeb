/************************************ 
General display 
*/


*{
	border: 0px solid black;
	
}


/** Display for Code tag */
code{
  	font-family: Consolas,"courier new";
  	color: crimson;
  	background-color: #f1f1f1;
  	font-size: 105%;
	border: aquamarine;
	border-left-style: solid;
	display: inline-block;
	padding-left: 30px;
	align-content: center;
	margin-left:50px;
	margin-right: auto;
	margin-bottom: 5px;
}
section{
	padding-left: 30px;
	background-color: bisque;
	padding-bottom: 8px;
}
section ul{
	display: block;
}


