#footer #global {

	border: 3px solid grey;
	width: 99%;
	display: table;
	position: bo;
	height: 150px;
	margin-bottom: -200px;
	bottom: 0;
	background: #F7F7F7;
	margin-top: 15px;


}


#footer .bloc {
	text-align: center;
	display: table-cell;
	width: 30%;
	border: 5px solid grey;
	

	
	
}

.bloc p{
	margin: 1px;
	background: transparent;
	color: blue;
}
/* Display of the contact box */
.contact {
	
	margin: 1px;
	padding: 1px;
	text-align: left;
	text-indent: 15px;
	width: 100%;

}
.bloc h4{
	margin: 1px;
	padding: 1px;
}
em {
	background-color: lightgrey;
	font-family: monospace ;
	color: black;
	padding: 2px;
}
